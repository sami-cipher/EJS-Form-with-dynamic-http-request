<%- include('partials/header') -%>

<h1>Compose</h1>

<form action="/compose" method="POST">
  <div class="form-group">
    <label for="postTitle">Post Title</label>
    <input class="form-control" type="text" name="postTitle" id="postTitle">
  </div>
  
  <div class="form-group">
    <label for="postContent">Post Content</label>
    <textarea class="form-control" name="postContent" id="postContent" cols="40" row="5"></textarea>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include('partials/footer') -%>